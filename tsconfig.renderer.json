{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": ["./src/renderer/**/*", "src/types/**/*"]
}
